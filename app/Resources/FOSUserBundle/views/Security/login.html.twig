{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
  <div class="col-sm-offset-2 col-sm-10">
    <div style="margin-left: -10px;">
      <h1>Please Login</h1>
      {% if error %}
        <div class="row">
          <div class="col-md-2 ">
            <div class="flash-notice alert alert-info"  >
              {{ error.message}}
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>

  <form class="form-horizontal" role="form"   action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <div class="form-group">
      <div class="control-label col-sm-2">
        <label for="username">{{ 'Username' }}</label>
      </div>
      <div class="col-sm-8 col-md-3">
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <label for="password">{{ 'Password' }}</label>
      </div>
      <div class="col-sm-8 col-md-3">
        <input class="form-control" type="password" id="password" name="_password" required="required" />
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <label for="remember_me">{{ 'Remember me' }}</label>
      </div>
      <div class="col-sm-8 col-md-3" style="margin-top: 12px;">
        <input class="checkbox" type="checkbox" id="remember_me" name="_remember_me" value="on" />
      </div>
    </div>
<div class="col-sm-8 col-md-3 col-sm-offset-2 col-md-offset-2">
  <div style="margin: 0 0 0 -10px;">
    <input class="btn btn-default"  type="submit" id="_submit" name="_submit" value="{{ 'Login'}}" />
    <p style="margin-top: 10px;">or <a href="{{ path('fos_user_registration_register') }}" >Register</a></p>
    <a href="{{ path('fos_user_resetting_request') }}">Forgot password?</a>
  </div>
</div>
  </form>
{% endblock fos_user_content %}
